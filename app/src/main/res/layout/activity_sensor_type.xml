<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center_vertical"
    tools:context="ru.werklogic.werklogic.activities.SensorTypeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="5dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/sensor_type1"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="@string/gercon"
                        />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/gercon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/sensor_type2"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="@string/infra" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/infra" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/sensor_type3"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="@string/brelok2" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/brelok2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="5dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RadioButton
                        android:id="@+id/sensor_type4"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:text="@string/brelok4" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/brelok4" />

                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action1_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/foo" />

            <Spinner
                android:id="@+id/action1_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/action_type_array" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action2_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/foo" />

            <Spinner
                android:id="@+id/action2_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/action_type_array" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action3_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/foo" />

            <Spinner
                android:id="@+id/action3_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/action_type_array" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action4_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/foo" />

            <Spinner
                android:id="@+id/action4_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/action_type_array" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
